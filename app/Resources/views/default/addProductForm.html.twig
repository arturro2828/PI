{% extends 'base.html.twig' %}
{% block title %}Dodawanie produktu{% endblock %}

{% block body %} 
    <div class="form-signin-product" >

        {{ form_start(form) }}

        <h2  class="form-signin-heading">Podaj dane produktu</h2>		
        <div id="signin-success" class="alert alert-success">Dodano produkt</div>

        <div class="username-hide">
            {{ form_row(form.username) }}
        </div>

        <div class="email-hide">
            {{ form_row(form.email) }}
        </div>
        {{ form_row(form.product) }}
        {{ form_row(form.category) }}

        {{ form_row(form.description) }}
        {{ form_row(form.picture) }}
        {{ form_row(form._token) }}   
        {{ form_widget(form.AddAdvertButton) }}


        {{ form_end(form) }}
    </div>

{% endblock %}

