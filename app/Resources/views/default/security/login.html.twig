{% extends 'base.html.twig' %}

{% block body %}
    <div class="log-in">
        {% if error %}
            <div class="alert     {{ error.messageKey|trans(error.messageData, 'security') }}
                 alert-danger">{{ error.message | replace({"Bad credentials." : "Nazwa użytkownika lub hasło są nieprawidłowe.
                                                           Upewnij się, że wpisujesz poprawne dane."}) }}
            </div>
        {% endif %}
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div id="emailActivationSent" class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}



        <title>{% block title %}Strona do logowania{% endblock %}</title>
        <form action="{{ path('login') }}" method="post">
            <h2  class="form-signin-heading">Zaloguj się do serwisu</h2>
            <div><label for="username">Nazwa użytkownika:</label></div>
            <div><input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" /></div>

            <div><label for="password">Hasło:</label></div>
            <div><input class="form-control" type="password" id="password" name="_password" /></div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">Zaloguj</button>

        </form> 
    </div>
{% endblock %}
